            <div class="form-group">
                <label asp-for="DrinkLog.DrinkTime" class="control-label"></label>
                <input asp-for="DrinkLog.DrinkTime" class="form-control" />
                <span asp-validation-for="DrinkLog.DrinkTime" class="text-danger"></span>
